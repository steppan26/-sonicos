<div id="offers" class="mt-3" data-dashboard-target="section">
  <h3 class="my-3">My Sonics</h3>
  <ul class="display-cards">
    <% if @my_offers.empty? %>
      <li>You haven't made any offers yet.</li>
    <% else %>
      <% @my_costumes_offers.each do |costume| %>
        <li>
          <%= link_to costume_path(costume) do %>
            <%= render '/costumes/card', costume: costume %>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
