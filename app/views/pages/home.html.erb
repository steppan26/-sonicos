<div class="landing-wrap">
  <div class="container">
    <div class="landing-content">

      <div class="landing-titles">
        <h1>BECOME THE SONIC OF YOUR DREAMS</h1>
        <h5>Explore and enhance your Sonic experience</h5>
      </div>
      <div class="row">
        <%= form_with url: "/costumes", method: :get, html: { class: 'd-flex col' } do |form| %>
      <%= form.text_field :address, placeholder: "Address", class:"bg-light border border-primary rounded form-control m-2" %>
      <%= form.date_field :date, placeholder: "When ?", class:"bg-light border border-primary rounded form-control m-2" %>
      <%= form.submit "Sonic Me !", class:"btn btn-primary text-white m-2 rounded"%>
      <% end %>
      </div>
    </div>
  </div>
</div>
