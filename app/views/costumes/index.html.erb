<h1>Welcome to your costumes</h1>

<%= link_to 'New Sonic', "/costumes/new" %>

<ul>
  <% @costumes.each do |costume| %>
    <% p costume %>
    <li>
      <%= link_to costume.title, "/costumes/#{costume.id}" %>
      <img src="<%= costume.image_url%>" alt="<%= costume.title %>">
      <%= link_to 'Edit', "/costumes/#{costume.id}/edit" %>
      <%= link_to 'Delete', costume_path(costume.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
