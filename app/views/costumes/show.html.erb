<div class="container">
  <h1><%= @costume.title %></h1>
  <% if @costume.photos.attached? %>
    <div class="d-flex p-2 m-2">
      <div>
        <%= cl_image_tag @costume.photos.first.key, height: 350, width: 450, crop: :fill %>
      </div>
      <div class="row m-3">
          <% @costume.photos.each do |photo| %>
            <div class="col-6">
              <%= cl_image_tag photo.key, height: 150, width: 200, crop: :fill %>
            </div>
          <% end %>
      </div>
    </div>
  <% else %>
    <img src="<%= @costume.image_url%>" alt="<% @costume.title %>">
  <% end %>
  <%= link_to "Back", "/costumes" %>
</div>
