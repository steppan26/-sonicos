<div class="container-offers-card">
  <div class="offers-card">
    <div class="avatar">
      <%= image_tag "https://img.huffingtonpost.com/asset/5ff3371b260000ae2b7a3827.jpeg?cache=AfBaoaRwUB&ops=scalefit_630_noupscale", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    </div>
      <div class="offers-card-info">
        <h5><%= offer.user.username %></h5>
        <p>From <%= offer.date_of_hire %> to <%= offer.date_of_end %></p>
      </div>
        <div class="container-price-availibility">
          <div class="paid-label-container">
            <div class="free-label-text"><%= costume.price * offer.duration %>â‚¬</div>
          </div>
          <% if offer.status == "accepted" %>
            <div class="available-label-container">
              <div class="available-label-text">accepted</div>
              <%= link_to 'Cancel',  cancel_offer_path(offer.id), method: :post, data: { confirm: "Are you sure?" } %>
            </div>
          <% elsif offer.status == "pending" %>
            <div class="pending-label-container">
              <div class="available-label-text">pending</div>
              <%= link_to 'Accept',  accept_offer_path(offer.id), method: :post, data: { confirm: "Are you sure?" } %>
            </div>
          <% else %>
            <div class="unavailable-label-container">
              <div class="available-label-text">rejected</div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>


